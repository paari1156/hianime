{
    "name": "hianime.to",
    "version": "1.0.0",
    "author": {
        "name": "sobet",
        "website": "https://google.com"
    },
    "iconURL": "https://example.com/icon.png",
    "stream": "MP4",
    "language": "EN",
    "extractor": "normal",
    "module": [
        {
            "search": {
                "url": "https://hianime.to/search",
                "parameter": "query",
                "documentSelector": "div.search-results div.result-item",
                "title": "h3.title",
                "image": {
                    "url": "img",
                    "attribute": "src"
                },
                "href": "a"
            },
            "featured": {
                "url": "https://hianime.to/featured",
                "documentSelector": "div.featured-items div.item",
                "title": "a.name",
                "image": {
                    "url": "img",
                    "attribute": "src"
                },
                "href": "a"
            },
            "details": {
                "baseURL": "https://hianime.to",
                "aliases": {
                    "selector": "div.aliases",
                    "attribute": "text"
                },
                "synopsis": "div.synopsis",
                "airdate": "div.airdate",
                "stars": "div.stars"
            },
            "episodes": {
                "selector": "div.episode-list a.episode",
                "order": "ordered",
                "pattern": "https://hianime.to/episode/[\\w-]+"
            }
        }
    ]
}
